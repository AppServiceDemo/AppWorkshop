{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vNetName": {
      "type": "string",
      "minLength": 1
    },
    "ArtifactStagingType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Premium_LRS"
      ]
    },
    "BuildSrvDiskType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Premium_LRS"
      ]
    },
    "LabBuildSrvName": {
      "type": "string",
      "minLength": 1
    },
    "LabBuildSrvAdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "LabBuildSrvAdminPassword": {
      "type": "securestring"
    },
    "LabBuildSrvWindowsOSVersion": {
      "type": "string",
      "defaultValue": "VS-2017-Ent-WS2016",
      "allowedValues": [
        "VS-2017-Ent-Win10-N",
        "VS-2017-Ent-WS2016"
      ]
    },
    "vstsAccount": {
      "type": "string"
    },
    "vstsPAT": {
      "type": "string"
    },
    "vstsAgentName": {
      "type": "string"
    },
    "vstsPoolName": {
      "type": "string"
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "Auto-generated container in staging storage account to receive post-build staging folder upload"
      }
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "Auto-generated token to access _artifactsLocation"
      }
    }
  },
  "variables": {
    "vNetPrefix": "10.0.0.0/16",
    "vNetSubnet1Name": "Subnet-1",
    "vNetSubnet1Prefix": "10.0.0.0/24",
    "ArtifactStagingName": "[take(tolower(concat(resourceGroup().name,'staging', uniqueString(resourceGroup().id))),24)]",
    "LabBuildSrvImagePublisher": "MicrosoftVisualStudio",
    "LabBuildSrvImageOffer": "VisualStudio",
    "LabBuildSrvOSDiskName": "LabBuildSrvOSDisk",
    "LabBuildSrvVmSize": "Standard_D2_v2",
    "LabBuildSrvVnetID": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vNetName'))]",
    "LabBuildSrvSubnetRef": "[concat(variables('LabBuildSrvVnetID'), '/subnets/', variables('vNetSubnet1Name'))]",
    "LabBuildSrvStorageAccountContainerName": "vhds",
    "LabBuildSrvNicName": "[concat(parameters('LabBuildSrvName'), 'NetworkInterface')]",
    "LabBuildSrvPubIpName": "[concat(parameters('LabBuildSrvName'), 'PubIp')]",
    "LabBuildSrvPubIpDnsName": "[concat(parameters('LabBuildSrvName'),uniqueString(resourceGroup().id))]",

    "InstallVstsBuildAgentScriptFolder": "CustomScripts",
    "InstallVstsBuildAgentScriptFileName": "InstallVstsBuildAgent.ps1",
    "vstsAccount": "[concat(' -vstsAccount ', parameters('vstsAccount'))]",
    "vstsUserPassword": "[concat(' -vstsUserPassword ', parameters('vstsPAT'))]",
    "agentName": "[concat(' -agentName ', parameters('vstsAgentName'))]",
    "poolName": "[concat(' -poolName ', parameters('vstsPoolName'))]",
    "windowsLogonAccount": "[concat(' -windowsLogonAccount ', parameters('LabBuildSrvAdminUserName'))]",
    "windowsLogonPassword": "[concat(' -windowsLogonPassword ', parameters('LabBuildSrvAdminPassword'))]",
    "driveLetter": "[concat(' -driveLetter ','C')]",
    "InstallVstsBuildAgentScriptParams": "[concat(variables('vstsAccount'), variables('vstsUserPassword'), variables('poolName'), variables('agentName'), variables('windowsLogonAccount'), variables('windowsLogonPassword'), variables('driveLetter'))]"
  },
  "resources": [
    {
      "name": "[parameters('vNetName')]",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [ ],
      "tags": {
        "displayName": "vNet"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('vNetPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('vNetSubnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('vNetSubnet1Prefix')]"
            }
          }
        ]
      }
    },
    {
      "name": "[variables('ArtifactStagingName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('ArtifactStagingType')]"
      },
      "dependsOn": [ ],
      "tags": {
        "displayName": "ArtifactStaging"
      },
      "kind": "Storage"
    },
    {
      "name": "[variables('LabBuildSrvNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('vNetName'))]",
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('LabBuildSrvPubIpName'))]"
      ],
      "tags": {
        "displayName": "LabBuildSrvNic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('LabBuildSrvSubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('LabBuildSrvPubIpName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('LabBuildSrvName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-04-30-preview",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('ArtifactStagingName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', variables('LabBuildSrvNicName'))]"
      ],
      "tags": {
        "displayName": "LabBuildSrv"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('LabBuildSrvVmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('LabBuildSrvName')]",
          "adminUsername": "[parameters('LabBuildSrvAdminUsername')]",
          "adminPassword": "[parameters('LabBuildSrvAdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('LabBuildSrvImagePublisher')]",
            "offer": "[variables('LabBuildSrvImageOffer')]",
            "sku": "[parameters('LabBuildSrvWindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "ManagedDisk": {
              "storageAccountType": "[parameters('BuildSrvDiskType')]"
            },
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('LabBuildSrvNicName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "InstallVstsBuildAgent",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2016-03-30",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', parameters('LabBuildSrvName'))]"
          ],
          "tags": {
            "displayName": "InstallVstsBuildAgent"
          },
          "properties": {
            "publisher": "Microsoft.Compute",
            "type": "CustomScriptExtension",
            "typeHandlerVersion": "1.4",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "fileUris": [
                "[concat(parameters('_artifactsLocation'), '/', variables('InstallVstsBuildAgentScriptFolder'), '/', variables('InstallVstsBuildAgentScriptFileName'), parameters('_artifactsLocationSasToken'))]"
              ],
              "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File ', variables('InstallVstsBuildAgentScriptFolder'), '/', variables('InstallVstsBuildAgentScriptFileName'), variables('InstallVstsBuildAgentScriptParams'))]"
            }
          }
        }
      ]
    },
    {
      "name": "[variables('LabBuildSrvPubIpName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [ ],
      "tags": {
        "displayName": "LabBuildSrvPubIp"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[tolower(variables('LabBuildSrvPubIpDnsName'))]"
        }
      }
    }
  ],
  "outputs": {
  }
}
